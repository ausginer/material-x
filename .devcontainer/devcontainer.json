{
  "name": "material-x",
  "image": "debian:bookworm-slim",
  "runArgs": ["--name=materialx_dev"],
  "containerEnv": {
    "CHROME_BIN": "/usr/local/bin/chrome",
    "PLAYWRIGHT_SKIP_BROWSER_DOWNLOAD": "1"
  },
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "username": "node",
      "userUid": "1000",
      "userGid": "1000",
      "addsudo": true,
      "installZsh": false
    },
    "ghcr.io/kreemer/features/chrometesting:1": {},
    "./local-features/volta": {
      "nodeVersion": "24"
    }
  },
  "forwardPorts": [9876, 6006, 5173],
  "containerUser": "node",
  "remoteUser": "node",
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
  "workspaceMount": "source=${localEnv:PODMAN_DIR}${localWorkspaceFolder},target=${containerWorkspaceFolder},type=bind",
  "mounts": [
    {
      "source": "${localWorkspaceFolderBasename}_nodemodules",
      "target": "${containerWorkspaceFolder}/node_modules",
      "type": "volume"
    }
  ]
}
