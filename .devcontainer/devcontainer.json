{
  "name": "material-x",
  "image": "alpine:latest",
  "runArgs": ["--name=materialx_dev", "--init"],
  "containerEnv": {
    "PLAYWRIGHT_SKIP_BROWSER_DOWNLOAD": "1"
  },
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "username": "node",
      "userUid": "1000",
      "userGid": "1000",
      "addsudo": true,
      "installZsh": false
    },
    "ghcr.io/ausginer/alpine-features/alpine-node:1": {
      "nodeVersion": "24"
    },
    "ghcr.io/ausginer/alpine-features/alpine-chromium:1": {}
  },
  "forwardPorts": [9876, 6006, 5173],
  "containerUser": "node",
  "remoteUser": "node",
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
  "workspaceMount": "source=${localEnv:PODMAN_DIR}${localWorkspaceFolder},target=${containerWorkspaceFolder},type=bind",
  "mounts": [
    {
      "source": "${localWorkspaceFolderBasename}_nodemodules",
      "target": "${containerWorkspaceFolder}/node_modules",
      "type": "volume"
    }
  ]
}
